<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fillViewport="true"
    android:scrollbars="horizontal"
    android:background="@color/colorWhite"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_trending"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:backgroundTint="#fc4848"
        android:text="@string/trending"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="12sp"
        android:padding="5dp"
        app:cornerRadius="18dp"
        android:enabled="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_food"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/colorWhite"
        android:text="@string/food"
        android:textAllCaps="false"
        android:padding="5dp"
        android:textColor="#000"
        android:textSize="12sp"
        app:cornerRadius="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_trending"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#fc4848"
        app:strokeWidth="1dp" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_activity"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/colorWhite"
        android:text="@string/activity"
        android:textAllCaps="false"
        android:textColor="#000"
        android:textSize="12sp"
        app:cornerRadius="18dp"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_food"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="#fc4848"
        app:strokeWidth="1dp" />

    <com.google.android.material.button.MaterialButton
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="@string/shopping"
        android:layout_marginStart="20dp"
        android:backgroundTint="@color/colorWhite"
        app:cornerRadius="18dp"
        app:strokeWidth="1dp"
        app:strokeColor="#fc4848"
        android:gravity="center"
        android:textColor="#000"
        android:textAllCaps="false"
        android:textSize="12sp"
        android:padding="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_activity" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</HorizontalScrollView>