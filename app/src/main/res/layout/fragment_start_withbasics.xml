<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.StartWithbasicsFragment">

    <ImageView
        android:id="@+id/img_girl"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:adjustViewBounds="true"
        android:alpha="0.5"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signup" />

    <ImageView
        android:id="@+id/img_bg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/signup_bg" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_lets_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="100dp"
        android:text="Let's Start"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        android:layout_marginStart="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_with_basics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="with basics"
        android:textColor="@color/colorWhite"
        android:textSize="32sp"
        app:layout_constraintStart_toStartOf="@+id/txt_lets_start"
        app:layout_constraintTop_toBottomOf="@+id/txt_lets_start" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_user_first_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:drawableTint="#f6ede8"
        android:hint="First Name"
        android:maxLines="1"
        android:padding="5dp"
        app:layout_constraintVertical_bias="0.3"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_with_basics" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_user_last_name"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:drawableTint="#f6ede8"
        android:hint="Last Name"
        android:maxLines="1"
        android:padding="5dp"
        android:textColor="@color/colorWhite"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/edt_user_first_name"
        app:layout_constraintStart_toStartOf="@+id/edt_user_first_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_user_first_name" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/edt_username_signup"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:hint="Username"
        android:drawableTint="#f6ede8"
        android:textSize="18sp"
        android:textColor="@color/colorWhite"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="@+id/edt_user_last_name"
        app:layout_constraintStart_toStartOf="@+id/edt_user_last_name"
        app:layout_constraintTop_toBottomOf="@+id/edt_user_last_name" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_next_signup_screen"
        android:layout_width="240dp"
        android:layout_height="?attr/actionBarSize"
        android:backgroundTint="#ede0d8"
        android:text="Next"
        android:textAllCaps="false"
        android:textColor="@color/colorSignUpBgEnd"
        android:textSize="18sp"
        app:cornerRadius="26dp"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_username_signup" />

</androidx.constraintlayout.widget.ConstraintLayout>